<div class="container text-center new-page">

  <h1> Edit location</h1>
<%= simple_form_for [@location] do |f| %>
  <% if policy(@location).edit? %>
  <%= f.input :name %>
  <%= f.input :address %>
  <%= f.input :description %>
  <%= f.input :price %>
  <%= f.input :category %>
  <%= f.input :photo %>
  <%= f.input :photo_cache, as: :hidden %>
  <%= f.submit "Edit location", class: "btn btn-primary" %>
  <%= link_to "Back to dashboard", dashboard_path, class:"btn btn-primary" %>
  <% end %>
<% end %>
</div>
