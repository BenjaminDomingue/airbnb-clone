<div class="main-container text-center">
  <h2>My favorites</h2>
  <div class="container text-center d-flex justify-content-between flex-wrap">
    <% current_user.favorites.each do |favorite| %>
      <div class="card-trip">
      <% location = favorite.location %>
        <img class="card-img-top" src= <%= location.photo %> >
        <div class="card-trip-infos">
          <div class="info">
            <h2><%= link_to location.name, location_path(location) %></h2>
            <p><%= location.description %></p>
            <p><strong><%= location.category %></strong></p>
          </div>
          <h2 class="card-trip-pricing"><%= location.price %> $CAD</h2>
        </div>
      </div>
    <% end %>
  </div>
</div>
