<h1> New location</h1>

<%= simple_form_for [@location] do |f| %>
  <%= f.input :name %>
  <%= f.input :address %>
  <%= f.input :description %>
  <%= f.input :price %>
  <%= f.input :category %>
  <%= f.submit "Add the location", class: "btn btn-primary" %>
  <%= link_to "Back to main page", root_path, class:"btn btn-primary" %>
<% end %>

