<div class="container text-center new-page">


<h1> New location</h1>

<%= simple_form_for [@location] do |f| %>
  <%= f.input :name %>
  <%= f.input :address %>
  <%= f.input :description %>
  <%= f.input :price %>
  <%= f.select :category, Location::CATEGORY, prompt: "Choose a category" %>
  <%= f.input :photo %>
  <%= f.input :photo_cache, as: :hidden %>
  <%= f.submit "Add the location", class: "btn btn-primary btn-lg" %>
  <%= link_to "Back to dashboard", dashboard_path, class:"btn btn-secondary btn-lg" %>
<% end %>
</div>

