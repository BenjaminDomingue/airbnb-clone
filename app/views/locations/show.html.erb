<div class="container">
<h1 class="text-center" >Location details</h1>
<div class="container-show">
<div class="information">
<h3><%= @location.name %></h3>
<p><%= @location.address %></p>
<p><%= @location.description %></p>
<p><%= @location.price %></p>
<p><%= @location.category %></p>

<%= render 'bookings/new' %>

<p><%= @location.price %> $CAD</p>
<p><%= @location.category %></p>
</div>
<div class="map"
    id="map"
    style="width: 700px;
    height: 600px;"
    data-markers="<%= @markers.to_json %>"
    data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>">
</div>
</div>
<div class="show-btn">
<%= link_to "Back dashboard", dashboard_path, class: "btn btn-primary btn-lg" %>
<%= link_to "Edit location", edit_location_path, class: "btn btn-primary btn-lg" %>
<!-- <button type="button" class="btn btn-danger btn-lg">‚ù§</button> -->
</div>
</div>

