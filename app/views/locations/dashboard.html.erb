<h1>Owner dashboard</h1>

<div class="container d-flex justify-content-around">
	<div>
		<ul class="list-inline tabs-underlined">
		  <li>
		    <a href="#" class="tab-underlined active">Bookings</a>
		  </li>
		  <li>
		    <a href="#" class="tab-underlined">Requests</a>
		  </li>
		  <li>
		    <a href="#" class="tab-underlined">Favorites</a>
		  </li>
		  <li>
		    <a href="#" class="tab-underlined">Messages</a>
		  </li>
		</ul>
	</div>
</div>

<div class="container">
  <%= link_to "Add a new location", new_location_path, class: "btn btn-primary btn-lg new-location-btn m-3"  %>
  <% @locations.each do |location| %>
  <div class="card-trip">
    <img src="https://images.unsplash.com/photo-1428606072838-3280ee194d54?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=1500&q=80">
  <div class="card-trip-infos">
    <div>
      <h2><%= link_to location.name, location_path(location) %></h2>
      <p><%= location.description %></p>
      <p><strong><%= location.category %></strong></p>
    </div>
    <h2 class="card-trip-pricing"><%= location.price %> $CAD</h2>
    <%= link_to location_path(location.id), method: :delete do %>
      <i class="fas fa-trash-alt"></i>
      <% end %>
    </div>
  </div>
  <% end %>
</div>
